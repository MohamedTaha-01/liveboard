{
  "extends": "eslint:recommended",
  "env": {
    "es6": true
  },
  "globals": {
    "window": "writable",
    "module": "writable",
    "describe": "readonly",
    "it": "readonly",
    "expect": "readonly",
    "_": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "console": "readonly",
    "setInterval": "readonly",
    "setTimeout": "readonly",
    "require": "readonly"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_[^_].*$|^_$",
        "varsIgnorePattern": "^_[^_].*$|^_$",
        "caughtErrorsIgnorePattern": "^_[^_].*$|^_$"
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
